{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "react"
  },
  "include": ["site/**/*"],
  "exclude": ["node_modules", "dist", "relltee_adapter"]
}
